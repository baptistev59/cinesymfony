{% extends 'base.html.twig' %}

{% block title %}Notre programmation cinématographique - Cinéma Aurora
{% endblock %}

{% block body %}
	<div class="actions" style="justify-content:space-between">
		<h1 style="margin:0">Programmation</h1>
	</div>
	<p class="muted">Tous les films actuellement à l’affiche et leurs séances.</p>

	<div class="movies">
		{% for film in films %}
			<article class="movie">
				<div class="poster">{{ film.titre }}</div>
				<div>
					<h3>{{ film.titre }}</h3>
					<p class="muted">{{ film.genre }}
						·
						{{ film.duree }}
						min ·
						{{ film.langue }}</p>
					<h4>Séances</h4>
					<ul class="seances-list">
						{% for seance in film.seances %}
							<li>{{ seance.date | date('d/m à H:i') }}
								<a class="btn small" href="reservation.html?film={{ film.titre|url_encode }}&seance={{ seance.date|date('Y-m-d\TH:i')|url_encode }}">Réserver</a>
							</li>
						{% endfor %}

					</ul>
				</div>
			</article>
		{% endfor %}


	</div>
{% endblock %}
