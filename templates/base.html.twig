<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}
		{{ encore_entry_link_tags('app') }}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<header class="nav">
			<div class="container nav-inner">
				<a class="brand" href="{{ path('app_home') }}">
					<span class="brand-logo">A</span>
					<span>Cinéma Aurora</span>
				</a>

				<input id="menu" type="checkbox" class="hidden" aria-hidden="true">
				<label for="menu" class="menu-toggle btn">Menu</label>

				<nav class="nav-links">

					<a href="{{ path('app_home') }}" class="active">Accueil</a>
					<a href="{{ path('app_programmation') }}">Programmation</a>
					{# <a href="{{ path('app_programmation') }}">Réserver</a> #}

					{% if  not app.user %}
						<a class="cta" href="{{ path('app_login') }}">Se connecter</a>
						<a class="cta" href="{{ path('app_register') }}">S'inscrire</a>
					{% else %}
						<a class="cta" href="{{ path('app_logout') }}">Déconnexion</a>
						<a href="{{ path('app_profil') }}">Profil</a>
					{% endif %}
				</nav>
			</div>
		</header>

		<main class="{% block main_class %}container section{% endblock %}"> {% block body %}{% endblock %}
			</main>

			<footer class="footer">
				<footer class="footer">
					<div class="container">© Cinéma Aurora — Mentions légales · CGV · Données personnelles</div>
				</footer>
			</body>
		</body>
	</html>
